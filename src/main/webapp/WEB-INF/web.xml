<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>admissionweb</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>${webapp.rootname}</param-value>
	</context-param>
	<listener>
		<listener-class>com.admission.web.listener.InitListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<display-name>CacheFilter</display-name>
		<filter-name>CacheFilter</filter-name>
		<filter-class>com.admission.web.filter.CacheFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<display-name>AuthFilter</display-name>
		<filter-name>AuthFilter</filter-name>
		<filter-class>com.admission.web.filter.AuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
		<url-pattern>/rest/system/password</url-pattern>
		<url-pattern>/rest/system/reloadcfg</url-pattern>
		<url-pattern>/rest/system/settimespace</url-pattern>
		<url-pattern>/rest/system/setagespace</url-pattern>
		<url-pattern>/rest/system/clearapplications</url-pattern>
		<url-pattern>/rest/application/find</url-pattern>
		<url-pattern>/rest/application/detail</url-pattern>
		<url-pattern>/rest/application/delete/*</url-pattern>
		<url-pattern>/rest/application/accept</url-pattern>
		<url-pattern>/rest/application/deny/*</url-pattern>
		<url-pattern>/rest/application/reset/*</url-pattern>
		<url-pattern>/rest/application/notify</url-pattern>
		<url-pattern>/rest/application/downloadall</url-pattern>
		<url-pattern>/rest/application/resetquerypassword</url-pattern>
		<url-pattern>/rest/application/getpassword</url-pattern>
		<url-pattern>/rest/application/findbc</url-pattern>
		<url-pattern>/rest/application/recheckin/*</url-pattern>
		<url-pattern>/rest/news/create</url-pattern>
		<url-pattern>/rest/news/update</url-pattern>
		<url-pattern>/rest/news/delete/*</url-pattern>
		<url-pattern>/rest/parameter/create</url-pattern>
		<url-pattern>/rest/parameter/update</url-pattern>
		<url-pattern>/rest/parameter/delete/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>hibReqSessionFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
		<init-param>
			<param-name>singleSession</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>hibReqSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>stylefilter</filter-name>
		<filter-class>com.admission.web.filter.StyleFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>stylefilter</filter-name>
		<url-pattern>/css/my.css</url-pattern>
		<url-pattern>/images/my_logo.gif</url-pattern>
		<url-pattern>/images/head_bg.gif</url-pattern>
		<url-pattern>/images/head_bg.jpg</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>ValidateCodeImageServlet</display-name>
		<servlet-name>ValidateCodeImageServlet</servlet-name>
		<servlet-class>com.admission.web.servlet.ValidateCodeImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ValidateCodeImageServlet</servlet-name>
		<url-pattern>/validatecode.jpg</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>ResourceServlet</display-name>
		<servlet-name>ResourceServlet</servlet-name>
		<servlet-class>com.admission.web.servlet.ResourceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ResourceServlet</servlet-name>
		<url-pattern>/resource/*</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>com.admission.web.listener.AppListener</listener-class>
	</listener>
</web-app>